{
	"compilerOptions": {
		"lib": ["esnext"],
		"module": "esnext",
		"target": "esnext",
    "moduleResolution": "node",
		"ignoreDeprecations": "5.0",
    "strict": true,
    "allowJs": true,
		"checkJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
		"esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
		"preserveValueImports": true,
    "importsNotUsedAsValues": "error",
		"forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDirs": ["."],
		"paths": {
			"$lib": [ "../src/lib" ],
		},
	},
}
