{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "nodenext",
    "ignoreDeprecations": "5.0",
    "strict": true,
    "allowJs": true,
		"checkJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
		"esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
		"preserveValueImports": true,
    "importsNotUsedAsValues": "error",
		"forceConsistentCasingInFileNames": true,
	},
}
